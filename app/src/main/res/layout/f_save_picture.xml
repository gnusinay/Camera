<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorSaveFragmentBackground">

    <ImageView
        android:id="@+id/captured_picture"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <View
        android:layout_height="1dp"
        android:layout_width="match_parent"
        android:background="@drawable/horizontal_divider"
        android:layout_gravity="bottom"
        android:layout_marginBottom="62dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="bottom|fill_horizontal"
        android:weightSum="2"
        android:divider="@drawable/vertical_divider_buttons"
        android:showDividers="middle">

            <ImageButton
                android:id="@+id/save_button"
                android:layout_width="match_parent"
                android:layout_height="62dp"
                android:src="@mipmap/ic_yes"
                android:background="@drawable/save_fragment_buttons_background"
                android:layout_weight="1"/>


            <ImageButton
                android:id="@+id/not_save_button"
                android:layout_width="match_parent"
                android:layout_height="62dp"
                android:src="@mipmap/ic_no"
                android:background="@drawable/save_fragment_buttons_background"
                android:layout_weight="1" />
    </LinearLayout>


</FrameLayout>